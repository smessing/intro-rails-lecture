<div class="centered">
  <%= form_for(@note) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <hr noshade/>

    <%= f.submit "Create note", class: "btn btn-large btn-primary" %>
  <% end %>
</div><!-- .centered -->
